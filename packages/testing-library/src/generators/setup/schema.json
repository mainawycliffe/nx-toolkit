{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Setup",
  "title": "",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The project to setup Testing Library for",
      "$default": {
        "$source": "projectName"
      },
      "x-priority": "important"
    },
    "framework": {
      "type": "string",
      "description": "The framework to setup Testing Library for",
      "x-prompt": {
        "message": "Which framework do you want to setup Testing Library for?",
        "type": "list",
        "items": [
          {
            "label": "React",
            "value": "react"
          },
          {
            "label": "Angular",
            "value": "angular"
          },
          {
            "label": "Vue",
            "value": "vue"
          },
          {
            "label": "Svelte",
            "value": "svelte"
          },
          {
            "label": "Marko",
            "value": "marko"
          },
          {
            "label": "DOM",
            "value": "dom"
          }
        ]
      }
    }
  },
  "required": [
    "framework"
  ]
}
